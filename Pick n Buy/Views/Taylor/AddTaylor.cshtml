                        @Html.ValidationMessageFor(model => model.Skill3, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-inline mt-3">
                    @Html.LabelFor(model => model.S1Des, htmlAttributes: new { @class = "control-label" })
                    <div class="col-md-6">
