                        @Html.TextAreaFor(model => model.Skill1, new { @rows = 4, @class = "col-md-12", placeholder = Html.DisplayNameFor(x => x.Skill1) })
                        @Html.ValidationMessageFor(model => model.Skill1, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-inline mt-3">
