@model OTM.Models.Mdl_Portfolio

@{
    ViewBag.Title = "AddPortfolio";
    Layout = "~/Views/Shared/_TaylorLayout.cshtml";
}
@if (ViewBag.Message != null)
        {
<br />
<div class="alert alert-success">
    @ViewBag.Message
</div>
        }
<div class="mx-auto"><h2 class="text-black-50">Add Portfolio</h2></div>

@using (Html.BeginForm("AddPortfolio", "Taylor", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="mx-auto">
            @Html.DropDownListFor(md => md.ID, new SelectList(Model.TaylorList, "ID", "Name"), "--Select Taylor--", new { @class = "form-control", @style = "border-radius:25px;" })
        </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="custom-file form-inline mt-4">
            <div class="col-md-10">
                <input type="file" name="file" id="customFile" class="custom-file-input" />
                @Html.LabelFor(model => model.Image, htmlAttributes: new { @class = "custom-file-label", @for = "customFile" })
                @Html.ValidationMessageFor(model => model.Image, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-inline mt-4">
            @Html.LabelFor(model => model.About, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.About, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.About, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="offset-2 col-md-10">
                <input type="submit" value="Enter" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
