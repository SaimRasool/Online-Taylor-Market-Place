@model OTM.Models.MdlAccount
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>RegisterMessage</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/MyStyle/style.css" rel="stylesheet" />
    <link href="~/Content/fontawesome-all.min.css" rel="stylesheet" />
    <link href="~/Content/MyStyle/LoginCSS.css" rel="stylesheet" />
</head>
<body>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @if (ViewBag.Status != null && Convert.ToBoolean(ViewBag.Status))
    {
        if (ViewBag.Message != null)
        {
            <div class="materialContainer" style="min-width:50%;">
                <div class="box">
                    <div class="title">PLEASE VERIFY</div>
                    <div class="alert alert-success">
                        @ViewBag.Message
                    </div>
                    <div class="button login">
                        <button type="submit" onclick="location.href = 'http://www.gmail.com';"><span>GO</span> <i class="fa fa-check"></i></button>
                    </div>
                </div>
            </div>
        }
    }



    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/jquery-3.0.0.min.js"></script>
    <script src="~/Scripts/umd/popper.min.js"></script>

    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/Login/Login.js"></script>
</body>
</html>
